- var title = "login"

doctype html
include ../public/htmlHead.jade
body
	include ../public/header.jade
	include ../public/nav.jade
	main
		h1 Login
			form(method='post' action='/login')
				label Username: 
					input(type='text' name='username' size='30')
				br
				label Password:
					input(type='password' name='password' size='30')
				br
				input(type='submit' value='Submit')
		h2 #{data.error}
	
	include ../public/footer.jade
	script(src="js/Ajax.js", type='text/javascript')
	script(src="js/main.js", type='text/javascript')
	script(src="//tinymce.cachefly.net/4.2/tinymce.min.js")
	script
		| tinymce.init({selector:'#content', content_css:'../css/tinyMCE.css', plugins:'save'});
